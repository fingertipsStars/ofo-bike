/* pages/my/index.wxss */

.container{
  width:100%;
  height:100vh;
  background-color:#f2f2f2;
}

.userInfor{
  padding-top:60rpx;
  background-color:#fff;
}

.userInfor .img{
  position:relative;
  width:180rpx;
  height:180rpx;
  border-radius:50%;
  margin:20rpx auto 40rpx;
  box-shadow:0 0 20rpx rgba(0,0,0,.2);
}
.userInfor .img image{
position:absolute;
top:50%;
left:50%;
width:180rpx;
height:180rpx;
border-radius:50%;
transform: translate(-50% ,-50%);
}

.userInfor .useName{
  display:block;
 width:100%;
  text-align:center;
  padding:30rpx 0;
}

.wallet{
  display:flex;
  align-items: center;
  justify-content: space-between;
  padding:30rpx;
  background-color:#fff;
  margin-top:40rpx;
}

.btn-login{

  width:90%;
  position:absolute;
  bottom:80rpx;
  left:5%;
}