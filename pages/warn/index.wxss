/* pages/warn/index.wxss */

.container{
  width:100%;
  background-color:#f2f2f2;
}

.title{
  background-color:#f2f2f2;
  padding:30rpx 0 30rpx 50rpx;
  font-size:32rpx;
}

.choose{
  background-color:#fff;
}

 .choose-grids{
  display:flex;
  flex-wrap:wrap;
  padding:50rpx;
 justify-content:space-around;
}

.grid{
  width:45%;
  height:100rpx;
  margin-top:20rpx;
  border:2rpx dotted #b9dd08;
  border-radius:6px;
  text-align:center;
  line-height:100rpx;
}

.grid:first-child,.grid:nth-of-type(2){
  margin-top:0;
}

.action-photo{
  margin-top:30rpx;
  background-color:#fff;
   padding:40rpx 0 40rpx 50rpx;
}

.action-photo image{
  width:120rpx;
  height:120rpx;
 margin-left:25rpx;
  position:relative;
  overflow:visible;
  vertical-align:top;
}

.action-photo image icon{
  position:absolute;
  top:-20rpx;
  right:-20rpx;
}

.add{
  display:inline-block;
  width:120rpx;
  height:120rpx;
  text-align:center;
  line-height:120rpx;
  border:2rpx solid #ccc;
  font-size:28rpx;
  margin-left:25rpx;
  color:#ccc;
}

.action-input{
  background-color:#fff;
  margin-top:30rpx;
  padding-left:50rpx;
}

.action-input input{
  padding-top:40rpx;
  padding-bottom:40rpx;
  width:90%;
}

.action-input input:first-child{
  border-bottom:2rpx solid #ccc;
}

.action-submit{
  margin:40rpx 40rpx 0 40rpx;
  background-color:#f2f2f2;
  width:90%;
}